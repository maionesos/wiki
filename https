upstream backend {
    server 10.10.11.22;
}

server {
    listen 443 ssl;
    server_name cuunt.tatar.ru;

#не получено
    #ssl_certificate /etc/ssl/certs/cuunt.tatar.ru.crt;
    #ssl_certificate_key /etc/ssl/private/cuunt.tatar.ru.key;

    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256';
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://backend;  # Или https://backend, если бэкенд использует HTTPS
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;

        # Таймауты (опционально)
        proxy_connect_timeout 60s;
        proxy_read_timeout 60s;
        proxy_send_timeout 60s;
    }

    # Отключение Wallarm, если не используется
    # wallarm_mode off;
}